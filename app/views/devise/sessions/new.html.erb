<%= render partial: 'partials/navbar', locals: {prompt: 'Log in', back: (@back || root_path)}%>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field log">
    <%= f.label :email, class: "invisible" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "log", placeholder: :email %>
  </div>

  <div class="field log">
    <%= f.label :password, class: "invisible" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "log", placeholder: :password %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "add-button"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
