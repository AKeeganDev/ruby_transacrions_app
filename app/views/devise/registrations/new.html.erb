<%= render partial: 'partials/navbar', locals: {prompt: 'Sign up', back: (@back || root_path)}%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field log">
    <%= f.label :username, class: "invisible" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "email", class: "log", placeholder: :username %>
  </div>

  <div class="field log">
    <%= f.label :email, class: "invisible" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "log", placeholder: :email %>
  </div>
  <br />
  <div class="field log">
    <%= f.label :password, class: "invisible" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "log", placeholder: :new_password %>
  </div>

  <div class="field log">
    <%= f.label :password_confirmation, class: "invisible" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "log", placeholder: :confirm_new_password %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "add-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
